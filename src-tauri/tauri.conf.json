{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "sound-mixer",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://localhost",
          "https://api.imgbb.com/*",
          "https://dummyjson.com/*"
        ]
      }
    },
    "windows": [
      {
        "title": "sound-mixer",
        "width": 1700,
        "height": 900
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://api.imgbb.com; script-src 'self'; style-src 'self' 'unsafe-inline';"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
